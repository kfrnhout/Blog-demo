<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Demo blog | {{post.titel}}</title>
    </head>
    <body>
        {% include("header.html.twig") %}
        <div>
            {{post.publishedAt|date('Y-m-d H:i:s')}}
            <h3>{{post.titel}}</h3>
            <h4>{{post.subtitel}}</h4>
            <p>{{post.previewText}}</p>
            <p>{{post.mainText}}</p>
            {% if post.image != null %}
                <div><img src="/images/{{post.image}}"></div>
            {% endif %}
        </div>
        {{ form(form) }}
        {% for comment in comments %}
            <div class="comment">
                <br></br>
                {{comment.username}} at {{comment.timestamp|date('Y-m-d H:i:s')}}
                <p>{{comment.text|raw}}</p>
            </div>
        {% endfor %}
        <br></br>
        {% for i in 1..totalPages %}
            {% if i == page %}
                <a class="activePage">{{i}}</a>
            {% else %}
                <a class="inactivePage" href="{{path('view_post', {'post': post.id,'page': i})}}">{{i}}</a>
            {% endif%}
        {% endfor %}
    </body>
</html>
